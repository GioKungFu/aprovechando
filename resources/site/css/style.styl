body
    font-family 'Roboto', sans-serif
    font-size 14px
figure
    margin 0
    padding 0
.auto_width
    max-width 990px
    margin auto
#barTop
    background #72B045
    -moz-box-shadow    0px 1px 5px 0px rgba(0,0,0,0.31)
    box-shadow         0px 1px 5px 0px rgba(0,0,0,0.31)
    position relative
    z-index 1
#Header
    position relative
    z-index 0
    border-bottom 4px solid #292929
    .logo
        border-bottom  4px solid #83E33B
        width 300px
        margin-bottom -4px
        padding 6px 0
.areaHeader
    .data
        text-align right
#Slider
    min-height 130px;
    background-color #666
    position relative
    z-index 0
#Featured
    position relative
    border-radius 3px
    background #FFFFFF
    border 1px solid #D3D3D3
    -moz-box-shadow    0px 0px 3px 0px #DBDBDB
    box-shadow         0px 0px 3px 0px #DBDBDB
    margin-top -43px
    z-index 1
    overflow hidden
    margin-bottom 10px
#Banners
    margin-bottom 10px
.cline
    border-right 1px solid #ededed
.dline
    border-right 1px solid #ededed
    border-bottom  1px solid #ededed

/* LISTADO PRODUCTOS */

.listProducts
    .item
        padding 28px 12px
        height 100%
        overflow hidden
.listProducts
    .item
        figure
            float left
            width 100px
            margin-right 12px
.listProducts
    .item
        .entry
            float left
            width auto
.listProducts
    .item
        h2
            margin 0
            padding 0
            font-size 13px
            font-weight 700
            color #000
.listProducts
    .item
        span
            display block
            font-size 13px
            color #747474
.listProducts
    .item
        hr
            margin 10px 0
            padding 0 0
.listProducts
    .item
        button
            border-radius 3px
            background #85A559
            box-shadow 0 2px 0 0 #5D773A
            padding 7px 20px
            color #FFF
            border 0
            font-weight 700

.nav-tabs
    li
        a
            border-radius 0
            border-top 0
            font-family 'Roboto Condensed', sans-serif
            font-weight 700

#Destacados
    position relative
    border-radius 3px
    background #FFFFFF
    border 1px solid #D3D3D3
    -moz-box-shadow    0px 0px 3px 0px #DBDBDB
    box-shadow         0px 0px 3px 0px #DBDBDB
    overflow hidden
#Destacados
    .title
        background url("../images/pattern.png")
        border-bottom 1px solid #DBDBDB
#Destacados
    h1
        margin 0
        padding 14px 10px
        font-size 16px
        font-weight 700
        color #85A559



/* MEDIA SCREEN */

@media (max-width: 767px)
    .listProducts
        .item
            figure
                float left
                width 150px
    .cline
        border-right 1px solid #ededed
        border-bottom  1px solid #ededed
    #Banners
        img
            margin-bottom 10px
    #Slider
        display none
    #Featured
        margin-top 0

@media (max-width: 640px)
    .listProducts
        .item
            figure
                float left
                width 150px
    #Header
        position relative
        z-index 0
        border-bottom 4px solid #292929
        .logo
            border-bottom  0
            width auto
            margin-bottom auto
            padding 6px 0
            text-align center
    #Header
        .data
            text-align center
            padding-bottom 16px

@media (max-width: 379px)
    .listProducts
        .item
            figure
                float left
                width 80px